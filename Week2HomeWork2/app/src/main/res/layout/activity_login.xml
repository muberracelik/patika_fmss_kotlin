<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

        <TextView
            android:id="@+id/welcomeBack"
            android:layout_width="241dp"
            android:layout_height="61dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="126dp"
            android:fontFamily="@font/inter_bold"
            android:text="Welcome Back!"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pwInfo"
            android:layout_width="338dp"
            android:layout_height="61dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="163dp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center|start"
            android:text="Enter Your Username \u0026 Password"
            android:textColor="#565656"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/shapeLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-215dp"
            android:layout_marginTop="293dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/login_circle_shape" />

        <ImageView
            android:id="@+id/shapeLogin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-32dp"
            android:layout_marginTop="546dp"
            android:color="#0C3373"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/login_circle_shape" />

        <TextView
            android:id="@+id/userName"
            style="@style/text_style"
            android:layout_marginStart="43dp"
            android:layout_marginTop="391dp"
            android:fontFamily="@font/inter"
            android:text="Username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            style="@style/divider"
            android:layout_marginStart="29dp"
            android:layout_marginTop="463dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/password"
            style="@style/text_style"
            android:layout_marginStart="45dp"
            android:layout_marginTop="530dp"
            android:fontFamily="@font/inter"
            android:text="Password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            style="@style/divider"
            android:layout_marginStart="32dp"
            android:layout_marginTop="601dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ellipse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="27dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ellipse" />

        <ImageView
            android:id="@+id/arrowBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginTop="42dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginButton"
            style="@style/button_style"
            android:layout_width="229dp"
            android:layout_height="70dp"
            android:layout_marginStart="100dp"
            android:layout_marginBottom="100dp"
            android:fontFamily="@font/inder"
            android:text="LOGIN"
            android:textSize="36sp"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/forgetPw"
            android:layout_width="160dp"
            android:layout_height="31dp"
            android:layout_marginStart="140dp"
            android:layout_marginBottom="44dp"
            android:fontFamily="@font/inter"
            android:text="Forgotten Passwoard?"
            android:textColor="#6B6B6B"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/createAccount"
            android:layout_width="183dp"
            android:layout_height="31dp"
            android:layout_marginStart="132dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/inter"
            android:text="Or Create a New Account"
            android:textColor="#6B6B6B"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>