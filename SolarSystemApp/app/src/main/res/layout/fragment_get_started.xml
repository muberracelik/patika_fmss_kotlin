<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GetStartedFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/marsTitle"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="43dp"
                android:fontFamily="@font/lora"
                android:gravity="center"
                android:text="MARS ESTATE"
                android:textSize="24sp"
                android:textColor="#272728"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="375dp"
                android:layout_height="345dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="270dp"
                android:src="@drawable/astronomer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/startedButton"
                style="@style/button_style"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_marginStart="65dp"
                android:text="Get Started"
                android:textAllCaps="false"
                android:textSize="22sp"
                app:cornerRadius="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.424" />

            <ImageView
                android:id="@+id/roketImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:src="@drawable/rocket"
                app:layout_constraintBottom_toBottomOf="@+id/startedButton"
                app:layout_constraintEnd_toEndOf="@+id/startedButton"
                app:layout_constraintHorizontal_bias="0.755"
                app:layout_constraintStart_toStartOf="@+id/startedButton"
                app:layout_constraintTop_toTopOf="@+id/startedButton" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/letsExploreText"
                    android:layout_width="335dp"
                    android:layout_height="54dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="96dp"
                    android:fontFamily="@font/open_sans_extrabold"
                    android:text="Let's Explore the"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/SolarSystemText"
                    android:layout_width="320dp"
                    android:layout_height="54dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/open_sans_extrabold"
                    android:text="Solar System"
                    android:textColor="#F9AD1A"
                    android:textSize="40sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/withText"
                        android:layout_width="80dp"
                        android:layout_height="54dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/open_sans_extrabold"
                        android:text="with"
                        android:textColor="@color/black"
                        android:textSize="40sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/ExplorerText"
                        android:layout_width="220dp"
                        android:layout_height="54dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/open_sans_extrabold"
                        android:text="Explorer"
                        android:textColor="#F9AD1A"
                        android:textSize="40sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>